<Window x:Class="MAG.Buy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MAG"
        mc:Ignorable="d"
        Height="470" Width="815">
    <Grid Background="#020a2b">
        <Border MinWidth="600" Margin="5,40,5,0" Background="#022d3b" VerticalAlignment="Top" Padding="100"
  MaxWidth="550" CornerRadius="20" Height="375" Width="800">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Color="LightPink" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel Margin="-40,-45,-40,-45">
                <TextBlock FontSize="16" Foreground="White" Margin="0,0,0,5" Height="32" Width="134">Номер телефону:</TextBlock>
                <TextBox x:Name="Categories" HorizontalAlignment="center" Width="200" Margin="0,0,0,30" Height="22"></TextBox>
                <Button Content="Замовити" FontSize="16" Foreground="Black" Background="#FF2EBC3F" Width="100" FontWeight="Bold" Height="30" Click="Button_Click"/>
            </StackPanel>

        </Border>
        <Button x:Name="Back" Content="На головну" Click="Back_Click" Margin="352,239,352,153" Background="#FFD21B1B" FontWeight="Bold" FontSize="14"/>
    </Grid>
</Window>
